<svg width="495" height="195" viewBox="0 0 495 195" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="headerGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#2563eb;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1d4ed8;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="cardGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a1a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2d2d2d;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="ratingGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#fbbf24;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f59e0b;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="0" dy="4" stdDeviation="8" flood-color="#000000" flood-opacity="0.3"/>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="495" height="195" rx="10" fill="url(#cardGradient)" filter="url(#shadow)"/>
  
  <!-- Header -->
  <rect x="0" y="0" width="495" height="50" rx="10" fill="url(#headerGradient)"/>
  
  <!-- RoboContest Logo/Title -->
  <text x="20" y="32" font-family="Arial, sans-serif" font-size="18" font-weight="bold" fill="white">
    RoboContest Stats
  </text>
  
  <!-- Username and Full Name -->
  <text x="20" y="75" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="#2563eb">
    @<%= stats.username %>
  </text>
  
  <% if (stats.fullName && stats.fullName !== stats.username) { %>
    <text x="20" y="95" font-family="Arial, sans-serif" font-size="12" fill="#CCCCCC">
      <%= stats.fullName %>
    </text>
  <% } %>
  
  <!-- Main Stats Grid -->
  <g transform="translate(20, 110)">
    <!-- Rank -->
    <rect x="0" y="0" width="140" height="60" rx="8" fill="#2a2a2a" stroke="#2563eb" stroke-width="1"/>
    <text x="70" y="20" font-family="Arial, sans-serif" font-size="12" fill="#CCCCCC" text-anchor="middle">Rank</text>
    <text x="70" y="40" font-family="Arial, sans-serif" font-size="20" font-weight="bold" fill="#2563eb" text-anchor="middle">#<%= stats.rank.toLocaleString() %></text>
    
    <!-- Rating -->
    <rect x="150" y="0" width="140" height="60" rx="8" fill="#2a2a2a" stroke="#fbbf24" stroke-width="1"/>
    <text x="220" y="20" font-family="Arial, sans-serif" font-size="12" fill="#CCCCCC" text-anchor="middle">Rating</text>
    <text x="220" y="40" font-family="Arial, sans-serif" font-size="20" font-weight="bold" fill="#fbbf24" text-anchor="middle"><%= stats.rating %></text>
    
    <!-- Solved Problems -->
    <rect x="300" y="0" width="140" height="60" rx="8" fill="#2a2a2a" stroke="#10b981" stroke-width="1"/>
    <text x="370" y="20" font-family="Arial, sans-serif" font-size="12" fill="#CCCCCC" text-anchor="middle">Solved</text>
    <text x="370" y="40" font-family="Arial, sans-serif" font-size="20" font-weight="bold" fill="#10b981" text-anchor="middle"><%= stats.solved %>/<%= stats.total %></text>
  </g>
  
  <!-- Progress Bar for Rating -->
  <g transform="translate(20, 180)">
    <text x="0" y="0" font-family="Arial, sans-serif" font-size="10" fill="#CCCCCC">Rating Progress:</text>
    <rect x="0" y="5" width="200" height="8" rx="4" fill="#333333"/>
    <rect x="0" y="5" width="<%= Math.min(200, (stats.rating / stats.maxRating) * 200) %>" height="8" rx="4" fill="url(#ratingGradient)"/>
    <text x="210" y="12" font-family="Arial, sans-serif" font-size="10" fill="#CCCCCC"><%= stats.rating %>/<%= stats.maxRating %></text>
  </g>
  
  <!-- Top Languages -->
  <g transform="translate(250, 110)">
    <text x="0" y="15" font-family="Arial, sans-serif" font-size="12" fill="#CCCCCC" font-weight="bold">Top Languages:</text>
    <% stats.topLanguages.forEach((lang, index) => { %>
      <text x="0" y="<%= 35 + index * 15 %>" font-family="Arial, sans-serif" font-size="10" fill="#CCCCCC">
        <%= lang.language %>: <%= lang.solved %> solved
      </text>
    <% }); %>
  </g>
  
  <!-- Additional Stats -->
  <g transform="translate(250, 160)">
    <text x="0" y="0" font-family="Arial, sans-serif" font-size="10" fill="#CCCCCC">Success Rate:</text>
    <text x="0" y="15" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="#10b981"><%= stats.successRate %>%</text>
    
    <text x="80" y="0" font-family="Arial, sans-serif" font-size="10" fill="#CCCCCC">Submissions:</text>
    <text x="80" y="15" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="#f59e0b"><%= stats.totalSubmissions.toLocaleString() %></text>
  </g>
  
  <!-- Join Date -->
  <% if (stats.joinDate && stats.joinDate !== 'Unknown') { %>
    <g transform="translate(350, 110)">
      <text x="0" y="15" font-family="Arial, sans-serif" font-size="10" fill="#CCCCCC">Member since:</text>
      <text x="0" y="30" font-family="Arial, sans-serif" font-size="12" fill="#CCCCCC"><%= stats.joinDate %></text>
    </g>
  <% } %>
  
  <!-- Education Info -->
  <% if (stats.education && Object.keys(stats.education).length > 0) { %>
    <g transform="translate(350, 140)">
      <% Object.entries(stats.education).slice(0, 2).forEach(([key, value], index) => { %>
        <text x="0" y="<%= index * 15 %>" font-family="Arial, sans-serif" font-size="8" fill="#666666">
          <%= key %>: <%= value.length > 20 ? value.substring(0, 20) + '...' : value %>
        </text>
      <% }); %>
    </g>
  <% } %>
  
  <!-- Footer -->
  <text x="20" y="190" font-family="Arial, sans-serif" font-size="8" fill="#666666">
    Generated by robocontest-stats-card
  </text>
</svg>
