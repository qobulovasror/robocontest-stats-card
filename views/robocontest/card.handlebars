<svg width="495" height="240" viewBox="0 0 495 240" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="headerGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#2563eb;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1d4ed8;stop-opacity:1" />
    </linearGradient>
    {{#if (eq theme "dark")}}
    <linearGradient id="cardGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a1a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2d2d2d;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="textGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#CCCCCC;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#CCCCCC;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="textGradient2" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#FFFFFF;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#FFFFFF;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="subCardGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#2a2a2a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2a2a2a;stop-opacity:1" />
    </linearGradient>
    {{else}}
      <linearGradient id="cardGradient" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
        <stop offset="100%" style="stop-color:#cccccc;stop-opacity:1" />
      </linearGradient>
      <linearGradient id="textGradient" x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="0%" style="stop-color:#1a1a1a;stop-opacity:1" />
        <stop offset="100%" style="stop-color:#1a1a1a;stop-opacity:1" />
      </linearGradient>
      <linearGradient id="textGradient2" x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="0%" style="stop-color:#000000;stop-opacity:1" />
        <stop offset="100%" style="stop-color:#000000;stop-opacity:1" />
      </linearGradient>
      <linearGradient id="subCardGradient" x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
        <stop offset="100%" style="stop-color:#ffffff;stop-opacity:1" />
      </linearGradient>
    {{/if}}
    <style>
      @keyframes textColorAnimation {
        0% { stop-color: #ff0000; }
        33% { stop-color: #00ff00; }
        66% { stop-color: #0000ff; }
        100% { stop-color: #ff0000; }
      }
      
      .animate-text-color stop {
        animation: textColorAnimation 3s ease infinite;
      }
    </style>
    
    <linearGradient id="animatedTextGradient" x1="0%" y1="0%" x2="100%" y2="0%" class="animate-text-color">
      <stop offset="0%" style="stop-color:#CCCCCC;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#CCCCCC;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="ratingGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#fbbf24;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f59e0b;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="starsGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#8b5cf6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#7c3aed;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="0" dy="4" stdDeviation="8" flood-color="#000000" flood-opacity="0.3"/>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="495" height="240" rx="10" fill="url(#cardGradient)" filter="url(#shadow)"/>
  
  <!-- Header -->
  <rect x="0" y="0" width="495" height="50" rx="10" fill="url(#headerGradient)"/>
  
  <!-- RoboContest Logo/Title -->
  <text x="20" y="32" font-family="Arial, sans-serif" font-size="18" font-weight="bold" fill="#ffffff">
    RoboContest - {{stats.username}}
  </text>
  
  <!-- Full Name -->  
  <text x="247" y="70" font-family="Arial, sans-serif" text-anchor="middle" font-size="15" fill="url(#textGradient)">
    {{stats.fullName}}
  </text>
  
  <!-- Main Stats Grid -->
  <g transform="translate(20, 80)">
    <!-- Rank -->
    <rect x="0" y="0" width="102" height="50" rx="8" fill="url(#subCardGradient)" stroke="#2563eb" stroke-width="1"/>
    <text x="50" y="17" font-family="Arial, sans-serif" font-size="10" fill="url(#textGradient)" text-anchor="middle">Rank</text>
    <text x="55" y="37" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="#2563eb" text-anchor="middle">#{{formatNumber stats.rank}}</text>
    
    <!-- Rating -->
    <rect x="117" y="0" width="102" height="50" rx="8" fill="url(#subCardGradient)" stroke="#fbbf24" stroke-width="1"/>
    <text x="168" y="17" font-family="Arial, sans-serif" font-size="10" fill="url(#textGradient)" text-anchor="middle">Rating</text>
    <text x="168" y="37" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="#fbbf24" text-anchor="middle">{{stats.rating}}</text>
    
    <!-- Solved Problems -->
    <rect x="234" y="0" width="102" height="50" rx="8" fill="url(#subCardGradient)" stroke="#10b981" stroke-width="1"/>
    <text x="285" y="17" font-family="Arial, sans-serif" font-size="10" fill="url(#textGradient)" text-anchor="middle">Solved</text>
    <text x="285" y="37" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="#10b981" text-anchor="middle">{{stats.solved}}/{{stats.total}}</text>
    
    <!-- Stars -->
    <rect x="351" y="0" width="102" height="50" rx="8" fill="url(#subCardGradient)" stroke="#8b5cf6" stroke-width="1"/>
    <text x="402" y="17" font-family="Arial, sans-serif" font-size="10" fill="url(#textGradient)" text-anchor="middle">Stars</text>
    <text x="402" y="37" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="#8b5cf6" text-anchor="middle">{{stats.solvedStars}}/{{stats.totalStars}}</text>
  </g>
  
  <!-- Progress Bars -->
  <g transform="translate(20, 155)">
    <!-- Rating Progress -->
    <text x="0" y="0" font-family="Arial, sans-serif" font-size="9" fill="url(#textGradient)">Rating:</text>
    <rect x="0" y="5" width="150" height="6" rx="3" fill="#333333"/>
    <rect x="0" y="5" width="{{progressWidth stats.rating stats.maxRating 150}}" height="6" rx="3" fill="url(#ratingGradient)"/>
    <text x="160" y="10" font-family="Arial, sans-serif" font-size="9" fill="url(#textGradient)">{{stats.rating}}/{{stats.maxRating}}</text>
    
    <!-- Stars Progress -->
    <text x="0" y="25" font-family="Arial, sans-serif" font-size="9" fill="url(#textGradient)">Stars:</text>
    <rect x="0" y="30" width="150" height="6" rx="3" fill="#333333"/>
    <rect x="0" y="30" width="{{progressWidth stats.solvedStars stats.totalStars 150}}" height="6" rx="3" fill="url(#starsGradient)"/>
    <text x="160" y="35" font-family="Arial, sans-serif" font-size="9" fill="url(#textGradient)">{{stats.solvedStars}}/{{stats.totalStars}}</text>
  </g>
  
  <!-- Top Languages -->
  <g transform="translate(250, 140)">
    <text x="0" y="15" font-family="Arial, sans-serif" font-size="12" fill="url(#textGradient)" font-weight="bold">Top Languages:</text>
    {{#each stats.topLanguages}}
      <text x="0" y="{{add 35 (multiply @index 20)}}" font-family="Arial, sans-serif" font-size="10" fill="url(#textGradient)">
        {{language}}: {{solved}} solved
      </text>
    {{/each}}
  </g>
  
  <!-- Additional Stats -->
  <g transform="translate(370, 200)">
    <text x="0" y="0" font-family="Arial, sans-serif" font-size="11" fill="url(#textGradient)">Success Rate:</text>
    <text x="80" y="0" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="#10b981">{{stats.successRate}}%</text>
    
    <text x="0" y="18" font-family="Arial, sans-serif" font-size="11" fill="url(#textGradient)">Submissions:</text>
    <text x="80" y="18" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="#f59e0b">{{formatNumber stats.totalSubmissions}}</text>
  </g>
  
  <!-- Recent Activity Preview -->
  {{#if activity}}
    {{#with (lookup activity 0) as |recent|}}
      {{#if recent}}
        <g transform="translate(20, 205)">
          <text x="0" y="0" font-family="Arial, sans-serif" font-size="9" fill="#666666">Recent: {{truncate recent.taskName 20}} 
            <tspan fill="{{ternary (isAccepted recent.attemStatus) '#10b981' '#ef4444'}}">
              {{ternary (isAccepted recent.attemStatus) '✓' '✗'}}
            </tspan>
          </text>
        </g>
      {{/if}}
    {{/with}}
  {{/if}}
  
  <!-- Join Date -->
  {{#if (and stats.joinDate (neq stats.joinDate 'Unknown'))}}
    <g transform="translate(390, 140)">
      <text x="0" y="15" font-family="Arial, sans-serif" font-size="10" fill="url(#textGradient)">Member since:</text>
      <text x="0" y="30" font-family="Arial, sans-serif" font-size="12" fill="url(#textGradient)">{{stats.joinDate}}</text>
    </g>
  {{/if}}
  
  <!-- Footer -->
  <text x="20" y="235" font-family="Arial, sans-serif" font-size="8" fill="#666666">
    Generated by robocontest-stats-card
  </text>
</svg>
